<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>

<StackPane fx:id="rootStackPane" maxHeight="Infinity" maxWidth="Infinity" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.checkerstcp.checkerstcp.controller.GameController">
   <children>
      <BorderPane fx:id="mainBorderPane" maxHeight="Infinity" maxWidth="Infinity" prefHeight="476.0" prefWidth="837.0" styleClass="border-pane" stylesheets="@css/game.css">
         <top>
            <HBox alignment="CENTER" prefHeight="60.0" styleClass="header" stylesheets="@css/game.css" BorderPane.alignment="CENTER">
               <children>
                  <Label fx:id="roomLbl" styleClass="room-label" stylesheets="@css/game.css" text="Pokoj: " />
                  <Label fx:id="roomNameLbl" styleClass="room-name-label" stylesheets="@css/game.css" text="Hra  #1" />
                  <Region fx:id="headerSpacerRegion" HBox.hgrow="ALWAYS" />
                  <Button fx:id="burgerMenuBtn" mnemonicParsing="false" styleClass="burger-menu-btn" stylesheets="@css/game.css">
                     <graphic>
                        <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@images/burger-bar.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
               </children>
            </HBox>
         </top>
         <bottom>
            <HBox fx:id="footer" alignment="CENTER_RIGHT" spacing="10.0" styleClass="footer" stylesheets="@css/game.css" BorderPane.alignment="CENTER">
               <children>
                  <Label fx:id="chatBtn" styleClass="chat-btn" stylesheets="@css/game.css">
                     <graphic>
                        <ImageView fx:id="chatBtnImg" fitHeight="22.0" fitWidth="22.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@images/speech-bubble%20(1).png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Label>
                  <Region fx:id="footerSpacerRegion" HBox.hgrow="ALWAYS" />
                  <Label styleClass="footer-text" stylesheets="@css/game.css" text="Stav sítě:">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Label>
                  <Label fx:id="netStateLbl" styleClass="footer-status" stylesheets="@css/game.css" text="offline" />
               </children>
               <padding>
                  <Insets right="10.0" />
               </padding>
            </HBox>
         </bottom>
      </BorderPane>
   </children>
</StackPane>

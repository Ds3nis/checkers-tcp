<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" stylesheets="@css/playerinfopanel.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.checkerstcp.checkerstcp.controller.GameInfoPanelController">
    <children>
        <HBox fx:id="playerInfoPanel" styleClass="player-header">
            <children>
                <Label fx:id="playerNameLbl" styleClass="player-name" text="Hráč 1" />
                <Region HBox.hgrow="ALWAYS" />
                <Label fx:id="playerMoveStatusLbl" text="Váš tah">
               <styleClass>
                  <String fx:value="player-badge" />
                  <String fx:value="active" />
               </styleClass></Label>
            </children>
        </HBox>
        <HBox alignment="CENTER_LEFT" styleClass="player-color" stylesheets="@css/playerinfopanel.css">
            <children>
            <Label>
               <styleClass>
                  <String fx:value="piece-preview" />
                  <String fx:value="red-piece" />
               </styleClass>
            </Label>
                <Label fx:id="pieceColorNamelbl" styleClass="piece-color-name" text="Červené" />
            </children>
        </HBox>
        <HBox alignment="CENTER_LEFT">
            <children>
                <Label fx:id="numOfPiecesLbl" styleClass="piece-count" text="12 dam" />
            </children>
        </HBox>
        <VBox spacing="5.0" VBox.vgrow="ALWAYS">
            <children>
                <Label fx:id="playerMovesLbl" styleClass="moves-title" text="Jeho kroky" VBox.vgrow="ALWAYS" />
                <ScrollPane fx:id="playerScrollMoves" hbarPolicy="NEVER" vbarPolicy="NEVER" VBox.vgrow="ALWAYS">
               <styleClass>
                  <String fx:value="moves-scroll" />
                  <String fx:value="viewport" />
               </styleClass></ScrollPane>
            </children>
        </VBox>
    </children>
   <styleClass>
      <String fx:value="player-card" />
      <String fx:value="black" />
   </styleClass>
</VBox>

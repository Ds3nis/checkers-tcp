<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<HBox fx:id="roomItemCard" alignment="CENTER" styleClass="room-card" stylesheets="@css/roomitem.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.checkerstcp.checkerstcp.controller.RoomItemController">
   <children>
      <VBox alignment="CENTER_LEFT" prefHeight="78.0" prefWidth="277.0">
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="31.0" prefWidth="287.0" spacing="15.0">
               <children>
                  <Label fx:id="roomNumberLbl" text="Hra #1" />
                  <Label fx:id="roomStatusLbl" styleClass="room-open" stylesheets="@css/roomitem.css" text="Očekává hráče" />
               </children>
               <VBox.margin>
                  <Insets right="20.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="20.0" prefWidth="298.0">
               <children>
                  <ImageView fitHeight="23.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@images/user.png" />
                     </image>
                     <HBox.margin>
                        <Insets right="6.0" />
                     </HBox.margin>
                  </ImageView>
                  <Label fx:id="numOfPlayersLbl" prefHeight="20.0" prefWidth="80.0" text="1/2 hráčů" />
               </children>
            </HBox>
         </children></VBox>
      <Region prefHeight="78.0" prefWidth="25.0" HBox.hgrow="ALWAYS" />
      <VBox alignment="CENTER" prefHeight="89.0" prefWidth="154.0">
         <children>
            <Button fx:id="connectToRoomBtn" maxWidth="196.0" minWidth="120.0" mnemonicParsing="false" styleClass="create-room-button" stylesheets="@css/lobby.css" text="Připojit se">
               <graphic>
                  <ImageView fitHeight="27.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@images/play-button.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets left="20.0" right="20.0" />
   </padding>
   <opaqueInsets>
      <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
   </opaqueInsets>
</HBox>
